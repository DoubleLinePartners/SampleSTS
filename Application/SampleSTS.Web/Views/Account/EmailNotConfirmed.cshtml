@model SampleSTS.Web.Models.ForgotPasswordViewModel
@{
    ViewBag.Title = "Email Address not confirmed";
}
<h3>@ViewBag.Title</h3>

@using (Html.BeginForm("ConfirmEmail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Email address has not been confirmed for this user. To resend a confirmation email, please enter your email address below. Email confirmation may be flagged by spam filters, so please check your spam folder.</h4>
    <br />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, null, new { @class = "form-control input-sm" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-info" value="Send Confirmation Email" />
        </div>
    </div>
}
